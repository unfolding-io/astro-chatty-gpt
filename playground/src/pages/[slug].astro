---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('pages');
  return posts.map((post: CollectionEntry<'pages'>) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post }: { post: CollectionEntry<'pages'> } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} thumbnail={post.data.thumbnail || ''} description={post.data.description || ''}>
  <div class="page-container">
    <div class="ai-article">
      <header class="article-header">
        <div class="breadcrumb">
          <a href="/">Home</a>
          <span class="separator">â†’</span>
          <span class="current">{post.data.title}</span>
        </div>
        <h1 class="article-title">{post.data.title}</h1>
        {post.data.description && (
          <p class="article-description">{post.data.description}</p>
        )}
        {post.data.author && (
          <div class="article-meta">
            <span class="author">By {post.data.author}</span>
          </div>
        )}
      </header>
      <div class="article-content">
        <Content />
      </div>
    </div>
  </div>
</Layout>

<style>
  .page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    min-height: calc(100vh - 140px);
  }

  .ai-article {
    background: rgba(26, 29, 41, 0.6);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 16px;
    padding: 3rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .article-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(0, 212, 255, 0.2);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .breadcrumb a {
    color: #00D4FF;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .breadcrumb a:hover {
    color: #0099CC;
  }

  .separator {
    color: rgba(255, 255, 255, 0.4);
  }

  .current {
    color: rgba(255, 255, 255, 0.8);
  }

  .article-title {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #00D4FF 0%, #0099CC 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .article-description {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 1.5rem 0;
    line-height: 1.6;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .author {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
    font-style: italic;
  }

  .article-content {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  /* Content styling */
  :global(.article-content h2) {
    color: #00D4FF;
    font-size: 2rem;
    font-weight: 700;
    margin: 3rem 0 1.5rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid rgba(0, 212, 255, 0.3);
    position: relative;
  }

  :global(.article-content h2::before) {
    content: '//';
    color: rgba(0, 212, 255, 0.5);
    margin-right: 0.5rem;
    font-family: 'Courier New', monospace;
  }

  :global(.article-content h3) {
    color: #00D4FF;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem 0;
  }

  :global(.article-content h4) {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem 0;
  }

  :global(.article-content p) {
    margin: 1.5rem 0;
    line-height: 1.8;
  }

  :global(.article-content ul, .article-content ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  :global(.article-content li) {
    margin: 0.75rem 0;
    line-height: 1.7;
  }

  :global(.article-content code) {
    background: rgba(0, 212, 255, 0.1);
    color: #00D4FF;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.9em;
    font-family: 'Fira Code', 'Courier New', monospace;
    border: 1px solid rgba(0, 212, 255, 0.2);
  }

  :global(.article-content pre) {
    background: rgba(15, 17, 21, 0.8);
    border: 1px solid rgba(0, 212, 255, 0.3);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
    position: relative;
  }

  :global(.article-content pre::before) {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #00D4FF, transparent);
  }

  :global(.article-content pre code) {
    background: none;
    padding: 0;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.9em;
    border: none;
  }

  :global(.article-content blockquote) {
    border-left: 4px solid #00D4FF;
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    background: rgba(0, 212, 255, 0.05);
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: rgba(255, 255, 255, 0.8);
    position: relative;
  }

  :global(.article-content blockquote::before) {
    content: '"';
    font-size: 3rem;
    color: rgba(0, 212, 255, 0.3);
    position: absolute;
    top: -0.5rem;
    left: 0.5rem;
    font-family: serif;
  }

  :global(.article-content a) {
    color: #00D4FF;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
    position: relative;
  }

  :global(.article-content a:hover) {
    color: #0099CC;
    border-bottom-color: #00D4FF;
  }

  :global(.article-content strong) {
    color: #00D4FF;
    font-weight: 600;
  }

  :global(.article-content hr) {
    border: none;
    height: 2px;
    background: linear-gradient(90deg, transparent, #00D4FF, transparent);
    margin: 3rem 0;
    border-radius: 1px;
  }

  :global(.article-content table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    background: rgba(26, 29, 41, 0.5);
    border-radius: 8px;
    overflow: hidden;
  }

  :global(.article-content th) {
    background: rgba(0, 212, 255, 0.1);
    color: #00D4FF;
    padding: 1rem;
    text-align: left;
    font-weight: 600;
  }

  :global(.article-content td) {
    padding: 1rem;
    border-bottom: 1px solid rgba(0, 212, 255, 0.1);
  }

  :global(.article-content tr:hover) {
    background: rgba(0, 212, 255, 0.05);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-container {
      padding: 1rem;
    }

    .ai-article {
      padding: 2rem;
    }

    .article-title {
      font-size: 2.5rem;
    }

    .article-description {
      font-size: 1.1rem;
    }

    :global(.article-content h2) {
      font-size: 1.75rem;
    }

    :global(.article-content h3) {
      font-size: 1.35rem;
    }
  }

  @media (max-width: 480px) {
    .ai-article {
      padding: 1.5rem;
    }

    .article-title {
      font-size: 2rem;
    }

    .breadcrumb {
      font-size: 0.8rem;
    }
  }
</style>